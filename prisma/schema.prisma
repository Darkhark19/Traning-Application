generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  @@map("users")
  Session Session[]
}

model Student {
  id         String   @id @default(uuid())
  subject    String
  content    String
  created_at DateTime @default(now())

  @@map("students")
  Session   Session? @relation(fields: [sessionId], references: [id])
  sessionId String?
}

model Course {
  id      String @id @default(uuid())
  name    String
  subject String


  @@map("courses")
  Session Session[]
}

model Session {
  id String @id @default(uuid())



  coordinator User      @relation(fields: [userId], references: [id])
  students    Student[]
  course      Course    @relation(fields: [courseId], references: [id])

  @@map("sessions")
  userId   String
  courseId String
}
