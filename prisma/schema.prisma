generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Token {
  token      String   @id
  user_id    String
  created_at DateTime @default(now())
  ended_at   DateTime @updatedAt

  @@map("tokens")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  courses  Course[]
  sessions Session[]
  @@map("users")
}

model Student {
  id       String @id @default(uuid())
  name     String
  password String
  email    String @unique
  class    String


  stCourse StudentCourse[]
  Session  Session[]
  @@map("students")
}

model Course {

  id      String @id @default(uuid())
  name    String
  subject String

  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String

  modelus  Module[]
  stCourse StudentCourse[]
  @@map("courses")
}

model StudentCourse {

  Student   Student @relation(fields: [studentId], references: [id])
  studentId String
  Course    Course  @relation(fields: [courseId], references: [id])
  courseId  String

  @@id([studentId, courseId], name: "id")
  @@map("stcourses")
}

model Module {

  id        String            @default(uuid())
  content   String
  course    Course            @relation(fields: [courseId], references: [id])
  courseId  String
  stModules SessionsModules[]

  @@id([courseId, id], name: "idModule")
  @@map("modules")
}

model Session {
  id            String            @id @default(uuid())
  created_at    DateTime          @default(now())
  ended_at      DateTime          
  coordinator   User              @relation(fields: [coordinatorId], references: [id])
  coordinatorId String
  students      Student           @relation(fields: [studentId], references: [id])
  studentId     String
  stModules     SessionsModules[]

  @@map("sessions")
}

model SessionsModules {

  session   Session @relation(fields: [sessionId], references: [id])
  sessionId String
  module    Module  @relation(fields: [courseId, moduleId], references: [courseId, id])
  moduleId  String
  courseId  String

  @@id([moduleId, sessionId, courseId], name: "idSsModule")
  @@map("ssModules")
}
